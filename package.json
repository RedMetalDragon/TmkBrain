{
    "name": "boilerplate",
    "version": "0.0.1",
    "description": "API Boilerplate",
    "license": "ISC",
    "author": "",
    "main": "dist/src/index.js",
    "scripts": {
        "bootstrap": "npm install && npm run set-hooks",
        "prebuild": "npx eslint . --ext .js,.ts",
        "build": "rm -rf dist && tsc && npm run copy:openapi",
        "copy:openapi": "cp ./openapi/* ./dist/",
        "dev": "nodemon --inspect=5858 -e ts, --exec node -r ts-node/register ./src/index.ts",
        "lint": "npx eslint . --ext .js,.ts",
        "format": "prettier --write \"**/*.ts\"",
        "sequelize:migrate": "sequelize db:migrate",
        "sequelize:migrate-up-seed-up": "sequelize db:migrate && sequelize db:seed:all",
        "sequelize:seed": "sequelize db:seed:all",
        "prestart": "npm run build && npm run test",
        "start": "node ./dist/src/index.js",
        "test": "npm run test:unit",
        "test:coverage": "jest --ci --coverage --maxWorkers=1 --no-cache --verbose",
        "test:e2e": "jest --testRegex=\"/e2e/.*\\.test\\.ts\" --verbose",
        "test:endpoint": "jest --testRegex=\"/endpoint/.*\\.test\\.ts\" --verbose",
        "test:unit": "jest --verbose",
        "test:watch": "jest --watch"
    },
    "dependencies": {
        "bcrypt": "^5.1.1",
        "body-parser": "^1.20.2",
        "cls-hooked": "^4.2.2",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^16.0.0",
        "express": "^4.17.1",
        "express-http-context": "^1.2.4",
        "express-json-validator-middleware": "^2.1.1",
        "geojson-validation": "^1.0.2",
        "guid-typescript": "^1.0.9",
        "helmet": "^4.6.0",
        "http-errors": "^1.7.2",
        "joi": "^17.13.3",
        "jsonwebtoken": "^9.0.2",
        "jwks-rsa": "^2.0.5",
        "luxon": "^3.4.4",
        "moment": "^2.30.1",
        "moment-timezone": "^0.5.45",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1",
        "mysql2": "^3.6.3",
        "sequelize": "^6.35.0",
        "sequelize-cli": "^6.4.1",
        "swagger-ui-express": "^4.6.3",
        "uuid": "^8.3.2",
        "winston": "^3.3.3",
        "yaml": "^2.3.1"
    },
    "devDependencies": {
        "@types/bluebird": "^3.5.36",
        "@types/compression": "^1.7.0",
        "@types/cors": "^2.8.10",
        "@types/express": "^4.17.11",
        "@types/http-errors": "^1.8.0",
        "@types/jest": "26.0.23",
        "@types/json-schema": "^7.0.10",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/morgan": "^1.9.2",
        "@types/multer": "^1.4.7",
        "@types/node": "^14.18.54",
        "@types/supertest": "^2.0.11",
        "@types/uuid": "^8.3.0",
        "@types/validator": "^13.1.3",
        "@typescript-eslint/eslint-plugin": "^4.22.0",
        "@typescript-eslint/parser": "^4.22.0",
        "eslint": "^7.24.0",
        "eslint-config-prettier": "^8.3.0",
        "husky": "^7.0.4",
        "jest": "^26.1.0",
        "jest-openapi": "^0.13.0",
        "lint-staged": "^12.3.4",
        "node-mocks-http": "^1.11.0",
        "nodemon": "^2.0.15",
        "prettier": "^2.8.8",
        "prettier-package-json": "^2.6.3",
        "sequelize-auto": "^0.8.8",
        "supertest": "^6.1.3",
        "ts-jest": "^26.5.6",
        "ts-node": "^10.8.1",
        "typescript": "^4.4.4"
    },
    "volta": {
        "node": "18.16.0"
    }
}
